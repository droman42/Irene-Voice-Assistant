                "справка"
              ]
            }
          }
        ],
        [
          {
            "TEXT": {
              "REGEX": "help|commands"
            }
          }
        ],
        [
          {
            "LEMMA": "что"
          },
          {
            "LEMMA": "уметь"
          }
        ],
        [
          {
            "TEXT": "what"
          },
          {
            "TEXT": "can"
          },
          {
            "TEXT": "you"
          },
          {
            "TEXT": "do"
          }
        ]
      ],
      "slot_patterns": {
        "HELP_TOPIC": [
          [
            {
              "LOWER": "по"
            },
            {
              "IS_ALPHA": true,
              "OP": "+"
            }
          ],
          [
            {
              "LOWER": "about"
            },
            {
              "IS_ALPHA": true,
              "OP": "+"
            }
          ]
        ]
      },
